<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="150.0" minWidth="600.0" prefHeight="150.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <BorderPane fx:id="addBook" layoutX="100.0" layoutY="100.0" minHeight="150.0" minWidth="600.0" prefHeight="150.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <center>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label prefHeight="27.0" prefWidth="105.0" text="Book">
                     <HBox.margin>
                        <Insets top="40.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="addTitle" promptText="Title">
                     <HBox.margin>
                        <Insets right="10.0" top="40.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="addCategory" promptText="Category">
                     <HBox.margin>
                        <Insets right="10.0" top="40.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="addAuthor" promptText="Director">
                     <HBox.margin>
                        <Insets right="10.0" top="40.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="addLength" promptText="content length">
                     <HBox.margin>
                        <Insets right="10.0" top="40.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="addCost" promptText="cost">
                     <HBox.margin>
                        <Insets right="10.0" top="40.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
         </center>
         <bottom>
            <Button fx:id="addButton" mnemonicParsing="false" text="Button" BorderPane.alignment="TOP_RIGHT">
               <BorderPane.margin>
                  <Insets bottom="15.0" right="15.0" />
               </BorderPane.margin>
            </Button>
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
